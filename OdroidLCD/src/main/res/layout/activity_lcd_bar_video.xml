<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="608dp"
    tools:context="com.hangisool.lcd_a_h.LcdActivity"
    android:orientation="vertical"
    android:weightSum="30"
    android:backgroundTintMode="screen"
    android:baselineAligned="false"
    android:background="@drawable/lcd_background2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:weightSum="64"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/weatherImage"
                    android:background="@drawable/w_02"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="254dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:text="-11.0℃"
                    android:id="@+id/tmnText2"
                    android:layout_marginLeft="360dp"
                    android:layout_marginTop="390dp"
                    android:textColor="#9dc3e6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:text="-11.0℃"
                    android:id="@+id/tmxText2"
                    android:textColor="#f8cbb2"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="390dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-11.0℃"
                    android:textSize="70dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="240dp"
                    android:id="@+id/celsiusText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:id="@+id/todayText"
                    android:textColor="#FFFFFF"
                    android:text="2017년 3월 6일"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="60dp"/>
                <TextView
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:textSize="120dp"
                    android:id="@+id/todayTimeText"
                    android:textColor="#FFFFFF"
                    android:text="03:13"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="120dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50">
                <TextView
                    android:id="@+id/txtLamp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="80dp"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

                <ImageView
                    android:id="@+id/imageArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="124dp"
                    />

                <TextView
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:textSize="320dp"
                    android:id="@+id/txtFloor"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:text="B5"
                    android:layout_marginLeft="340dp"
                    android:layout_marginTop="109dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:background="#000"
                    android:gravity="center"
                    android:id="@+id/mainView">
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="15"
        android:background="#a0000000">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="37dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="right|center"
            android:text="YONHAPNEWS" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight="12"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:id="@+id/newsText"
            android:textSize="33dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:weightSum="15"
        android:background="#a0000000">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="#3b000000"
            android:weightSum="50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#5a000000"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/buttom_line_1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#5a000000"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:weightSum="30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:text="오늘의 날씨"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/todayWeatherText"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/buttom_line_1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:orientation="horizontal"
                    android:weightSum="30">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="9dp"
                        android:background="@drawable/side_line_1">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="18"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:text="구름조금"
                            android:textSize="15dp"
                            android:layout_marginLeft="9dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/weatherText"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/buttom_line_2"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tmnText1"
                        android:textColor="#FFFFFF"
                        android:text="최저기온"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/buttom_line_2"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tmxText1"
                        android:textColor="#FFFFFF"
                        android:text="최고기온"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/buttom_line_2"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:text="강수확률"
                        android:textColor="#FFFFFF"
                        android:id="@+id/popText1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="0%"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:textColor="#FFFFFF"
                        android:id="@+id/popText2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/buttom_line_2"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:text="습도"
                        android:textColor="#FFFFFF"
                        android:id="@+id/humidityText1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="80%"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:textColor="#FFFFFF"
                        android:id="@+id/humidityText2"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#5a000000"
                android:layout_marginBottom="5dp"
                android:weightSum="6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"
                    android:text="증권정보"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/stockPriceText"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/buttom_line_1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    android:weightSum="6"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"
                    android:background="@drawable/buttom_line_2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:textSize="16dp"
                        android:layout_marginTop="13dp"
                        android:text="코스피"
                        android:textColor="#FFFFFF"
                        android:id="@+id/kospiText"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:textSize="15dp"
                        android:layout_marginTop="13dp"
                        android:text="2,085.52"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:textColor="#FFFFFF"
                        android:id="@+id/kospiPriceText"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="14dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="3dp"
                        android:gravity="right"
                        android:text="▲2.92"
                        android:textColor="#FF5A5A"
                        android:id="@+id/kospiContrastText"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/contentsView">
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
