<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hangisool.lcd_a_h.LcdActivity"
    android:orientation="vertical"
    android:weightSum="30"
    android:backgroundTintMode="screen"
    android:baselineAligned="false"
    android:background="@drawable/background_2">

    <RelativeLayout
        android:layout_width="1024px"
        android:layout_height="92px"
        android:background="#A8000000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="92px"
            android:textSize="50px"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:id="@+id/todayTimeText"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="20px"
            android:text="PM 03:13" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="92px"
            android:textSize="30px"
            android:gravity="left|center"
            android:id="@+id/todayText"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:text="2019년 12월 12일"/>

        <ImageView
            android:layout_width="92px"
            android:layout_height="92px"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/weatherImage"
            android:layout_margin="5px"
            android:background="@drawable/w2_01">
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="1024px"
        android:layout_height="576px"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="768px"
            android:layout_height="576px"
            android:background="#000"
            android:gravity="center"
            android:id="@+id/mainView">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="256px"
            android:layout_height="match_parent"
            android:background="#A8000000">
            <ImageView
                android:id="@+id/imageArrow"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60px"
                android:background="@drawable/arrow_up"/>

            <TextView
                android:id="@+id/txtFloor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300px"
                android:layout_centerHorizontal="true"
                android:text="B5"
                android:textColor="#FFFFFF"
                android:textSize="200px" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="1024px"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:weightSum="15"
        android:background="#78000000">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="NEWS"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="40px"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:id="@+id/newsText"
            android:textSize="35px"
            android:text="IIIIDFJIOEWJFOIEWJFOdddddddddddddddddddddddddddddddIJEFOIEWJOFIJEWIOJ"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:weightSum="64"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            android:weightSum="50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#5a000000"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="vertical">

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#5a000000"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:weightSum="30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:text="오늘의 날씨"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/todayWeatherText"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/buttom_line_1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:orientation="horizontal"
                    android:weightSum="30">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="9dp"
                        android:background="@drawable/side_line_1">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="18"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="7"
                            android:layout_marginTop="5dp"
                            android:text="10.5℃"
                            android:textSize="38dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/celsiusText"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:text="구름조금"
                            android:textSize="15dp"
                            android:layout_marginLeft="9dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/weatherText"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/buttom_line_2"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tmnText1"
                        android:textColor="#FFFFFF"
                        android:text="최저기온"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="5.3℃"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tmnText2"
                        android:textColor="#FFFFFF"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/buttom_line_2"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tmxText1"
                        android:textColor="#FFFFFF"
                        android:text="최고기온"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="11.2℃"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tmxText2"
                        android:textColor="#FFFFFF"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/buttom_line_2"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:text="강수확률"
                        android:textColor="#FFFFFF"
                        android:id="@+id/popText1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="0%"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:textColor="#FFFFFF"
                        android:id="@+id/popText2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/buttom_line_2"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:text="습도"
                        android:textColor="#FFFFFF"
                        android:id="@+id/humidityText1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="80%"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:textColor="#FFFFFF"
                        android:id="@+id/humidityText2"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#5a000000"
                android:layout_marginBottom="5dp"
                android:weightSum="6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"
                    android:text="증권정보"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/stockPriceText"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/buttom_line_1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.8"
                    android:weightSum="6"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"
                    android:background="@drawable/buttom_line_2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:textSize="16dp"
                        android:layout_marginTop="13dp"
                        android:text="코스피"
                        android:textColor="#FFFFFF"
                        android:id="@+id/kospiText"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:textSize="15dp"
                        android:layout_marginTop="13dp"
                        android:text="2,085.52"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:textColor="#FFFFFF"
                        android:id="@+id/kospiPriceText"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="14dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="3dp"
                        android:gravity="right"
                        android:text="▲2.92"
                        android:textColor="#FF5A5A"
                        android:id="@+id/kospiContrastText"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="17"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="#3c000000"
                android:id="@+id/contentsView">
            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>
